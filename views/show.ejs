<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <title>Document</title>

    <style>
        .textInp {
            width: 35% !important;
        }
    </style>

</head>
<body>
    <%- include('./partials/nav.ejs') %>
    <div style="text-align: center;">
        <br>
        <% if(post.length == 0){ %>
            <br><h4>No Posts</h4><br>
        <% } else { %>
            <% for(var i = 0; i < post.length; i++){ %>
                <div class="row">
                    <div style="width: 50%; margin: auto;">
                      <div class="card blue-grey darken-2">
                        <div class="card-content white-text">
                          <span class="card-title"><b><%= post[i].title %></b></span>
                          <p><%= post[i].description %></p>
                        </div>
                        <% if(post[i].author == author){ %>
                            <div class="card-action">
                                <a class="btn grey" href="/api/delete/<%= post[i]._id %>">Delete</a>
                            </div>
                        <% } %>
                      </div>
                    </div>
                  </div>
            <% } %>
        <% } %>
        <br>
        <form action="/api/logout" method="POST">
            <button class="btn dark-blue" type="submit">Logout</button>
        </form>
        <br><br><br>
    </div>
</body>
</html>